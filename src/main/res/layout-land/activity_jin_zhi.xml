                    app:layout_constraintVertical_bias="0.089"
                    tools:text="33" />

    <EditText
        android:id="@+id/shiliujinzhi"
        android:layout_width="356dp"
        android:layout_height="wrap_content"

        android:background="@mipmap/uiphoto27"
