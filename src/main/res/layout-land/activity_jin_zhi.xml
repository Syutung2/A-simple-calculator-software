        android:gravity="center"
        android:inputType="textPersonName"
        android:textColor="@color/myWhite"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/erjinzhi"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/erjinzhi"
        app:layout_constraintTop_toBottomOf="@+id/erjinzhi"
        app:layout_constraintVertical_bias="0.079" />

    <Button
                    android:id="@+id/quren"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@mipmap/button10"
                    android:text="转换"
                    android:textColor="@color/myWhite"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/qingkong"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/qingkong"
                    app:layout_constraintTop_toBottomOf="@+id/qingkong"
                    app:layout_constraintVertical_bias="0.252" />

