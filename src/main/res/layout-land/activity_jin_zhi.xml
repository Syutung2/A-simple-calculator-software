                    app:layout_constraintStart_toStartOf="@+id/textView7"
                    app:layout_constraintTop_toBottomOf="@+id/shijinzhi"
                    app:layout_constraintVertical_bias="0.685" />

                <TextView
                    android:id="@+id/textView7"
