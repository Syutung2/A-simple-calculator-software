<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myColor"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="cn.syutung.jisuanqi.About">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="216dp"
            android:layout_height="184dp"
            android:layout_weight="4"
            android:background="@color/myColor"
            android:textColor="@color/myWhite"
            app:srcCompat="@drawable/logo"
            tools:layout_editor_absoluteX="192dp"
            tools:layout_editor_absoluteY="180dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@color/myColor"
            android:text="制作者：Syutung"
            android:textColor="@color/myWhite"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="230dp"
            tools:layout_editor_absoluteY="389dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@color/myColor"
            android:gravity="center"
            android:text="邮箱：wangxudong@syutung.cn"
            android:textColor="@color/myWhite"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="168dp"
            tools:layout_editor_absoluteY="413dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@color/myColor"
            android:text="这是一个简简单单的计算器"
            android:textColor="@color/myWhite"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="192dp"
            tools:layout_editor_absoluteY="364dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/myColor"
            android:gravity="center"
            android:text="\t作者作为一个android开发的新手\n那么UI设计就免了\n而且还存在不少的bug"
            android:textColor="@color/myWhite"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="438dp" />

        <TextView
            android:id="@+id/kaiyuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/myColor"
            android:text="开源项目文件"
            android:textColor="@color/myWhite"
            tools:layout_editor_absoluteX="258dp"
            tools:layout_editor_absoluteY="906dp" />
    </LinearLayout>

</RelativeLayout>
