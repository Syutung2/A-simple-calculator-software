<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/myColor"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:layout_height="match_parent"
    tools:context="cn.syutung.jisuanqi.More">

    <ImageButton
        android:id="@+id/jinzhi"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/myColor"
        android:scaleType="fitXY"
        android:src="@drawable/jinzhi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.773"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.21" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="64dp"
        android:layout_height="21dp"
        android:layout_marginTop="16dp"
        android:background="@color/myColor"
        android:gravity="center"
        android:text="进制转换"
        android:textColor="@color/myWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/jinzhi"
        app:layout_constraintStart_toStartOf="@+id/jinzhi"
        app:layout_constraintTop_toBottomOf="@+id/jinzhi"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/jisuanqi"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@color/myColor"
        android:duplicateParentState="false"
        android:scaleType="fitXY"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:src="@drawable/jisuanqi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.234"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.21" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="64dp"
        android:layout_height="21dp"
        android:layout_marginTop="16dp"
        android:background="@color/myColor"
        android:gravity="center"
        android:text="计算器"
        android:textColor="@color/myWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/jisuanqi"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="@+id/jisuanqi"
        app:layout_constraintTop_toBottomOf="@+id/jisuanqi"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>
